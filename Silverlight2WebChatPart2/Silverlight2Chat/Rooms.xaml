<UserControl x:Class="Silverlight2Chat.Rooms"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="600" Height="340">
    <Grid x:Name="LayoutRoot" Background="White" ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />       <!-- padding -->
            <RowDefinition Height="38" />       <!-- title -->
            <RowDefinition Height="10" />       <!-- padding -->
            <RowDefinition Height="*" />        <!-- rooms -->
            <RowDefinition Height="10" />       <!-- padding -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />     <!-- padding -->
            <ColumnDefinition Width="*" />      <!-- rooms -->
            <ColumnDefinition Width="10" />     <!-- padding -->
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Choose a Room" Grid.Row="1" Grid.Column="1" FontSize="22" Foreground="Navy" />
        
        <StackPanel x:Name="SpnlRoomList" Orientation="Vertical" Grid.Row="3" Grid.Column="1" />
    </Grid>
</UserControl>
